{{#partial "content"}}
    {{#if editMechanic}}
        <h1>Edit this mechanics!</h1>
        <form action="/mechanics/{{mechanic.id}}" method="post">
            <br>
            <label for="name">Edit this mechanic name</label>
            <input id="name" name="name" type="text" value="{{mechanic.name}}">
            <br>
            <label for="charges">Edit this charges for identified client</label>
            <input id="charges" name="charges" type="text" value="{{mechanic.charges}}">
            <br>
            <label for="clientId">Update this client mechanic:</label>
            <select id="clientId" name="clientId">
                {{#each clients}}
                    <option value="{{id}}">{{name}}{{email}}{{tel}}{{car}}</option>
                {{/each}}
            </select>
<!--            <p>Don't see the right service name?<a href="/services/new">Add a new one first.</a></p>-->
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h1>Add a new mechanic!</h1>
        <form action="/mechanics" method="post">
            {{#if teachers}}
                <label for="name">mechanic name</label>
                <input id="name" name="name" type="text">
                <br>
                <label for="charges">mechanic charges</label>
                <input id="charges" name="charges" type="number">
                <br>
                <label for="clientId">Client mechanic:</label>
                <select id="clientId" name="clientId">
                    {{#each clients}}
                        <option value="{{id}}">{{name}}{{email}}{{tel}}{{car}}</option>
                    {{/each}}
                </select>
<!--                <p>Don't see the right service?<a href="/services/new">Add a new one first.</a></p>-->
            {{else}}
<!--                <h3> You'll need to add a service before you add a client. <a href="/clients/new">Add one here.</a> </h3>-->

            {{/if}}
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}