{{#partial "content"}}
    {{#if editClient}}
        <h1>Edit this client!</h1>
        <form action="/clients/{{client.id}}" method="post">
            <br>
            <label for="name">Edit this client name</label>
            <input id="name" name="name" type="text" value="{{client.name}}">
            <br>
            <label for="email">Edit this client Email</label>
            <input id="email" name="email" type="text" value="{{client.email}}">
            <br>
            <label for="tel">Edit this client tel</label>
            <input id="tel" name="tel" type="text" value="{{client.tel}}">
            <br>
            <label for="car">Edit this client car</label>
            <input id="car" name="car" type="text" value="{{client.car}}">
            <br>
            <label for="serviceId">Update this client service:</label>
            <select id="serviceId" name="serviceId">
                {{#each services}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right service name?<a href="/services/new">Add a new one first.</a></p>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h1>Add a new client!</h1>
        <form action="/clients" method="post">
            {{#if services}}

                <label for="name">client name</label>
                <input id="name" name="name" type="text">
                <br>
                <label for="email">client email</label>
                <input id="email" name="email" type="text">
                <br>
                <label for="tel">client tel</label>
                <input id="tel" name="tel" type="text">
                <br>
                <label for="car">client car</label>
                <input id="car" name="car" type="text">
                <br>
                <label for="serviceId">Client prefered service:</label>
                <select id="serviceId" name="serviceId">
                    {{#each services}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right service?<a href="/services/new">Add a new one first.</a></p>
            {{else}}
                <h3> You'll need to add a service before you add a client. <a href="/clients/new">Add one here.</a> </h3>

            {{/if}}
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}